// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/docker-existing-dockerfile
{
	"name": "Termux Assistant",
	"build": {
		// Update the 'dockerFile' property if you aren't using the standard 'Dockerfile' filename.
		"context": "..",
		"dockerfile": "Dockerfile",
		"args": {
			// Update 'VARIANT' to pick a Python version: 3, 3.11, 3.10, 3.9, 3.8, 3.7, 3.6
			"VARIANT": "3.14-slim-trixie"
		}
	},
	"remoteUser": "dev",
	"workspaceFolder": "/home/dev/termux-assistant",
	"workspaceMount": "source=${localWorkspaceFolder},target=/home/dev/termux-assistant,type=bind,consistency=cached",
	"customizations": {
		"vscode": {
			"settings": {
				"files.autoSave": "afterDelay",
				"files.autoSaveDelay": 1000
			},
			"extensions": [
				"ms-python.python",
				"ms-azuretools.vscode-containers",
				"formulahendry.code-runner",
				"usernamehw.errorlens",
				"github.copilot",
				"eamodio.gitlens",
				"visualstudioexptteam.vscodei",
				"visualstudioexptteam.vscodeintellicode",
				"visualstudioexptteam.intellicode-api-usage-examples",
				"kevinrose.vsc-python-"
			]
		}
	}
}